@{
    ViewData["Title"] = "City Weather";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>City Weather</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #87ceeb, #f0f8ff);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .weather-card {
            border-radius: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            background: white;
            padding: 2rem;
        }

        .pollutant-list li {
            font-size: 0.9rem;
        }

        footer {
            margin-top: auto;
            text-align: center;
            padding: 1rem;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="fw-bold">🌍 OpenWeather Dashboard</h1>
            <p class="text-muted">Enter a city name to view current environmental conditions</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group mb-4">
                    <input type="text" id="cityInput" class="form-control form-control-lg" placeholder="Enter city name (e.g., Tehran)" />
                    <button class="btn btn-primary btn-lg" onclick="getWeather()">Search</button>
                </div>
            </div>
        </div>

        <div id="resultContainer" class="row justify-content-center d-none">
            <div class="col-md-8">
                <div class="weather-card">
                    <h3 id="cityName" class="text-center mb-4 fw-semibold"></h3>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <h5>🌡 Temperature</h5>
                            <p id="temperature" class="fs-5"></p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h5>💧 Humidity</h5>
                            <p id="humidity" class="fs-5"></p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h5>💨 Wind Speed</h5>
                            <p id="windSpeed" class="fs-5"></p>
                        </div>
                    </div>
                    <hr />
                    <div class="text-center mb-4">
                        <h5>🌫 Air Quality Index</h5>
                        <p id="aqi" class="fs-4 fw-bold text-primary"></p>
                        <p id="aqiDesc" class="text-muted"></p>
                    </div>
                    <hr />
                    <div>
                        <h5>📍 Coordinates</h5>
                        <p id="coordinates" class="text-muted"></p>
                    </div>
                    <div>
                        <h5>🧪 Major Pollutants</h5>
                        <ul id="pollutants" class="pollutant-list list-unstyled ms-3"></ul>
                    </div>
                </div>
            </div>
        </div>

        <div id="errorContainer" class="alert alert-danger text-center d-none mt-4"></div>
    </div>

    <footer>© 2025 OpenWeather Demo | Built with ❤️ and Bootstrap 5</footer>

    <script>
        async function getWeather() {
            const city = document.getElementById("cityInput").value.trim();
            const resultContainer = document.getElementById("resultContainer");
            const errorContainer = document.getElementById("errorContainer");

            if (!city) {
                errorContainer.classList.remove("d-none");
                errorContainer.textContent = "Please enter a city name.";
                resultContainer.classList.add("d-none");
                return;
            }

            errorContainer.classList.add("d-none");

            try {
                // فراخوانی به endpoint داخلی که روی همان host اجرا می‌شود
                const response = await fetch(`/Weather/GetWeather?city=${encodeURIComponent(city)}`);
                if (!response.ok) {
                    const text = await response.text();
                    throw new Error(text || response.statusText);
                }

                const data = await response.json();

                document.getElementById("cityName").textContent = data.city;
                document.getElementById("temperature").textContent = `${data.temperatureC.toFixed(1)} °C`;
                document.getElementById("humidity").textContent = `${data.humidityPercent}%`;
                document.getElementById("windSpeed").textContent = `${data.windSpeedMeterPerSec.toFixed(1)} m/s`;
                document.getElementById("aqi").textContent = data.aqi;
                document.getElementById("aqiDesc").textContent = data.aqiDescription || "";
                document.getElementById("coordinates").textContent = `Lat: ${data.latitude}, Lon: ${data.longitude}`;

                const pollutantsList = document.getElementById("pollutants");
                pollutantsList.innerHTML = "";
                if (data.majorPollutants) {
                    for (const [key, value] of Object.entries(data.majorPollutants)) {
                        pollutantsList.innerHTML += `<li><strong>${key.toUpperCase()}:</strong> ${Number(value).toFixed(2)}</li>`;
                    }
                }

                resultContainer.classList.remove("d-none");
            } catch (err) {
                errorContainer.classList.remove("d-none");
                errorContainer.textContent = `Error: ${err.message}`;
                resultContainer.classList.add("d-none");
            }
        }
    </script>

</body>
</html>
